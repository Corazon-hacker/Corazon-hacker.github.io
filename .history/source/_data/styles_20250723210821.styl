/* 分类页面布局 */
/* 修复布局问题 */
.category-container {
  display: flex;
  margin-top: 20px;
  gap: 30px;
  height: 70vh; /* 设置固定高度 */
  
  .category-tree {
    flex: 1;
    min-width: 250px;
    overflow-y: auto; /* 添加滚动条 */
    padding-right: 15px;
    border-right: 1px solid #eee;
    max-height: 100%; /* 限制高度 */
  }
  
  .category-posts-container {
    flex: 2;
    display: none; /* 初始隐藏 */
    overflow-y: auto; /* 添加滚动条 */
    max-height: 100%; /* 限制高度 */
  }
}

/* 确保分类项在同一行 */
.category-list-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
  position: relative;
  
  .category-toggle-icon {
    flex-shrink: 0;
    width: 16px;
    text-align: center;
    margin-right: 8px;
    cursor: pointer;
  }
  
  .category-list-link {
    flex-grow: 1;
    padding: 6px 12px;
    border-radius: 4px;
    color: #2c3e50;
    text-decoration: none !important;
    transition: all 0.3s;
    
    &:hover {
      background-color: #f0f7ff;
      color: #4b6cb7;
    }
  }
  
  .category-list-count {
    flex-shrink: 0;
    background: #eaeef5;
    color: #6c757d;
    font-size: 0.85rem;
    padding: 2px 8px;
    border-radius: 20px;
    margin-left: 8px;
    transition: all 0.3s;
  }
  
  &:hover .category-list-count {
    background: #d1e0ff;
    color: #4b6cb7;
  }
}

/* 确保文章链接可见 */
#categoryPostsList {
  /* 确保文章标题可见 */
  .post-title-link, 
  .post-title-link span {
    color: #2c3e50 !important;
    opacity: 1 !important;
    font-weight: normal;
    
    &:hover {
      color: #4b6cb7 !important;
      text-decoration: underline;
    }
  }

  /* 确保所有文本内容可见 */
  * {
    color: #2c3e50 !important;
    opacity: 1 !important;
  }
  
  /* 特别确保日期文本可见 */
  .post-meta {
    color: #999 !important;
    opacity: 1 !important;
  }
  
  .post-header {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
  }
  
  .post-meta {
    flex-shrink: 0;
    width: 60px;
    text-align: right;
    margin-right: 15px;
    color: #999;
    font-size: 0.9rem;
  }
  
  .post-title {
    flex-grow: 1;
  }
}

/* 响应式设计 */
@media (max-width: 768px) {
  .category-container {
    flex-direction: column;
    height: auto; /* 移动设备上取消固定高度 */
    
    .category-tree {
      border-right: none;
      border-bottom: 1px solid #eee;
      padding-right: 0;
      padding-bottom: 20px;
      margin-bottom: 20px;
      max-height: 50vh; /* 移动设备上设置最大高度 */
    }

    .category-posts-container {
      max-height: none;
    }
  }
}

/* 加载动画 */
.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(75, 108, 183, 0.3);
  border-radius: 50%;
  border-top-color: #4b6cb7;
  animation: spin 1s ease-in-out infinite;
  margin-right: 10px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}